[Unit]
Description=Kubernetes Kubelet Service
After=containerd.service
After=network-online.target
Wants=network-online.target
Requires=containerd.service

[Service]
User=root
Group=root
WorkingDirectory={{ kubernetes_home }}
EnvironmentFile={{ kubernetes_home }}/etc/kubelet.conf
ExecStart={{ kubernetes_home }}/bin/kubelet $KUBELET_ARGS
Restart=on-failure
LimitNOFILE=200000


[Install]
WantedBy=multi-user.target

