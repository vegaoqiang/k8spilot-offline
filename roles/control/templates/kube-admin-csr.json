{
  "CN": "kube-admin",
  "hosts": [
    {% for host in groups['control'] %}
    "{{ hostvars[host].ansible_facts.default_ipv4.address }}",
    "{{ hostvars[host]['ansible_ssh_host'] }}",
    {% endfor %}
    "127.0.0.1"
  ],
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "names": [
    {
      "C": "CN",
      "L": "K8SPILOT",
      "O": "system:masters"
    }
  ]
}
